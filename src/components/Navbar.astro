---
import WorldSvg from "../icons/WorldSvg.astro";
import AuthButton from "./auth/AuthButton.astro";
---

<header class="pt-10">
    <nav class="flex justify-center space-x-14">
        <h3 class="flex items-center text-3xl font-bold">
            C<WorldSvg />NEX
        </h3>
        <ol
            class="flex justify-between border rounded-2xl h-12 items-center w-[730px] bg-[#E2E2E2]"
        >
            <div class="flex gap-10 px-10">
                <li class="text-base">
                    <a href="/">Home</a>
                </li>
                <li class="text-base">
                    <a href="/about/">About</a>
                </li>
                <li class="text-base">
                    <a href="/faq/">FAQ</a>
                </li>
                <li class="text-base text-[#7F56D9]">
                    <a href="/projects/">Projects</a>
                </li>
            </div>

            <input
                type="search"
                placeholder="Search"
                class="border w-80 rounded-xl h-11 pl-10"
            />
        </ol>
        <AuthButton />
    </nav>
</header>
