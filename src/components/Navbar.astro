---
import WorldSvg from "../icons/WorldSvg.astro";
import { getSession } from "auth-astro/server";
import AuthButtonHeader from "./auth/github/AuthButtonHeader.astro";
const session = await getSession(Astro.request);
---

<header class="pt-10">
    <nav class="flex justify-center gap-5 items-center">
        <h3 class="flex items-center text-3xl font-bold">
            C<WorldSvg />NEX
        </h3>
        <ol
            class="flex justify-between border rounded-2xl h-12 items-center bg-[#E2E2E2]"
        >
            <div class="flex gap-10 px-10">
                <li class="text-base">
                    <a href="/">Home</a>
                </li>
                <li class="text-base">
                    <a href="/about/">About</a>
                </li>
                <li class="text-base">
                    <a href="/faq/">FAQ</a>
                </li>
                <li class="text-base text-[#7F56D9]">
                    <a href="/projects/">Projects</a>
                </li>
            </div>
        </ol>
        {
            session ? (
                <>
                    <AuthButtonHeader />
                </>
            ) : (
                <a
                    href="/login"
                    class="bg-[#80ED99] text-balck rounded-2xl h-12 w-40 text-1xl text-center flex justify-center items-center gap-x-2"
                >
                    Sign Up
                </a>
            )
        }
    </nav>
</header>
